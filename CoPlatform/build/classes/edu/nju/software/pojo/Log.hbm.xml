<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.nju.software.pojo">
    <class name="Log" table="log">
        <id name="id" column="id">
            <generator class="increment" />
        </id>
        <property name="title" type="string" column="title" />
        <property name="desc" type="string" column="desc" />
        <many-to-one name="project" column="project_id" />
        <many-to-one name="task" column="task_id" />
        <many-to-one name="originStatus" column="origin_status" />
        <many-to-one name="currentStatus" column="current_status" />
        <property name="createdTime" type="timestamp" column="created_time" />
        <many-to-one name="company" column="company_id" />
        <property name="creatorId" type="integer" column="creator_id" />
        <property name="creatorType" type="int" column="creator_type" />
    </class>

</hibernate-mapping>